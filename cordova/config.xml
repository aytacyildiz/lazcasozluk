<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kodgunlugum.lazcasozluk" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LazcaSozluk</name>
    <description>
        Lazca Türkçe ve Türkçe Lazca sözlük.
    </description>
    <author email="aytac.yldz@gmail.com" href="http://kodgunlugum.com/lazcasozluk">
        Aytaç Yıldız
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <!-- Allow links to web pages to open in a browser -->
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
    <!-- https://cordova.apache.org/docs/en/5.1.1/config_ref/ -->
    <preference name="Fullscreen" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
	<!-- https://cordova.apache.org/docs/en/5.1.1/config_ref/images.html -->
    <icon src="www/img/logo.png" />
    <platform name="android">
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="all" />
    </platform>
    <engine name="browser" spec="~4.0.0" />
    <engine name="android" spec="~4.1.1" />
	<!-- https://cordova.apache.org/docs/en/5.1.1/config_ref/ -->
</widget>
